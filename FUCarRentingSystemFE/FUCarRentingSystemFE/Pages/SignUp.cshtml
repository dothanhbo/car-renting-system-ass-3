@page
@model FUCarRentingSystemFE.Pages.SignUpModel

@{
    ViewData["Title"] = "SignUp";
    Layout = null;
}
<style>
    /* Global styles */
    body {
        font-family: Arial, sans-serif;
    }

    /* Form container */
    .row {
        margin: 20px;
    }

    /* Form styles */
    .form-group {
        margin-bottom: 15px;
    }

    /* Input field styles */
    .form-control {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    /* Validation error message styles */
    .text-danger {
        color: #ff0000;
    }

    /* Submit button styles */
    .btn-primary {
        background-color: #007bff;
        color: #fff;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    /* Anchor link styles */
    a {
        text-decoration: none;
    }
</style>
<h1>SignUp</h1>

<h4>Customer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Customer.CustomerName" class="control-label"></label>
                <input asp-for="Customer.CustomerName" class="form-control" />
                <span asp-validation-for="Customer.CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Telephone" class="control-label"></label>
                <input asp-for="Customer.Telephone" class="form-control" />
                <span asp-validation-for="Customer.Telephone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Email" class="control-label"></label>
                <input asp-for="Customer.Email" class="form-control" required/>
                <span asp-validation-for="Customer.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.CustomerBirthday" class="control-label"></label>
                <input asp-for="Customer.CustomerBirthday" class="form-control" asp-format="{0:MM/dd/yyyy}" type="date"/>
                <span asp-validation-for="Customer.CustomerBirthday" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Password" class="control-label"></label>
                <input asp-for="Customer.Password" class="form-control" type="password" />
                <span asp-validation-for="Customer.Password" class="text-danger"></span>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Already have an account? Log in here!</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
